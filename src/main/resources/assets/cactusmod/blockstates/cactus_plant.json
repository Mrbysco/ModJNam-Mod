{
    "multipart": [
        {   "when": { "north": true },
            "apply": { "model": "cactusmod:cactus_plant_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "cactusmod:cactus_plant_side", "y": 90, "uvlock": true }
        },
        {   "when": { "south": true },
            "apply": { "model": "cactusmod:cactus_plant_side", "y": 180, "uvlock": true }
        },
        {   "when": { "west": true },
            "apply": { "model": "cactusmod:cactus_plant_side", "y": 270, "uvlock": true }
        },
        {   "when": { "up": true },
            "apply": { "model": "cactusmod:cactus_plant_side", "x": 270, "uvlock": true }
        },
        {   "when": { "down": true },
            "apply": { "model": "cactusmod:cactus_plant_side", "x": 90, "uvlock": true }
        },
        {   "when": { "north": false },
            "apply": [
                { "model": "cactusmod:cactus_plant_noside", "weight": 2 },
                { "model": "cactusmod:cactus_plant_noside1" },
                { "model": "cactusmod:cactus_plant_noside2" },
                { "model": "cactusmod:cactus_plant_noside3" }
            ]
        },
        {   "when": { "east": false },
            "apply": [
                { "model": "cactusmod:cactus_plant_noside1", "y": 90, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside2", "y": 90, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside3", "y": 90, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside", "weight": 2, "y": 90, "uvlock": true }
            ]
        },
        {   "when": { "south": false },
            "apply": [
                { "model": "cactusmod:cactus_plant_noside2", "y": 180, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside3", "y": 180, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside", "weight": 2, "y": 180, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside1", "y": 180, "uvlock": true }
            ]
        },
        {   "when": { "west": false },
            "apply": [
                { "model": "cactusmod:cactus_plant_noside3", "y": 270, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside", "weight": 2, "y": 270, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside1", "y": 270, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside2", "y": 270, "uvlock": true }
            ]
        },
        {   "when": { "up": false },
            "apply": [
                { "model": "cactusmod:cactus_plant_noside", "weight": 2, "x": 270, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside3", "x": 270, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside1", "x": 270, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside2", "x": 270, "uvlock": true }
            ]
        },
        {   "when": { "down": false },
            "apply": [
                { "model": "cactusmod:cactus_plant_noside3", "x": 90, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside2", "x": 90, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside1", "x": 90, "uvlock": true },
                { "model": "cactusmod:cactus_plant_noside", "weight": 2, "x": 90, "uvlock": true }
            ]
        }
    ]
}
